<?xml version="1.0" encoding="utf-8"?>
<net.soulwolf.image.picturelib.view.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:background="@color/pc_gallery_bg">

    <ImageView
        android:id="@+id/pi_gallery_choose_item_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/pc_black_t"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pi_gallery_choose_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:singleLine="true"/>

    </LinearLayout>

</net.soulwolf.image.picturelib.view.SquareLayout>