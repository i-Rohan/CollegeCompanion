<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pi_title_bar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/pc_title_bar">

    <Button
        android:id="@+id/pi_title_bar_left"
        android:layout_width="wrap_content"
        android:background="@drawable/pd_title_bar_action_selector"
        android:padding="5dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:textColor="@android:color/white"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/pi_title_bar_right"
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/pd_title_bar_action_selector"
        android:textColor="@android:color/white"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/pi_title_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:gravity="center"/>
</RelativeLayout>